        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/add"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
